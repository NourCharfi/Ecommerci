@model GestionArticles.Models.Product
@{
    ViewData["Title"] = "Détails produit / Gestion du stock";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Détails produit - Gestion du stock</h2>
        <div>
            <a asp-action="Index" asp-controller="Stock" class="btn btn-outline-secondary">Retour à la liste</a>
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary ms-2">Modifier le produit</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-3">
                <img src="~/images/@(Model.Image ?? "noimage.jpg")" class="card-img-top" style="object-fit:cover; height:320px;" />
                <div class="card-body">
                    <h4 class="card-title">@Model.Name</h4>
                    <p class="lead text-primary">@Model.Price.ToString("C0")</p>
                    <p><strong>Catégorie:</strong> @Model.Category?.CategoryName</p>
                    <p>
                        <strong>État du stock:</strong>
                        @if (Model.QteStock == 0)
                        {
                            <span class="badge bg-danger ms-2">Rupture</span>
                        }
                        else if (Model.QteStock <= 20)
                        {
                            <span class="badge bg-warning text-dark ms-2">Stock limité</span>
                        }
                        else
                        {
                            <span class="badge bg-success ms-2">En stock</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h5>Mettre à jour la quantité <h4 class="text-danger fw-bold">Action Rapide</h4></h5>

                <form asp-action="Edit" asp-controller="Stock" asp-route-id="@Model.ProductId" method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="Name" />
                    <input type="hidden" asp-for="Price" />
                    <input type="hidden" asp-for="CategoryId" />
                    <input type="hidden" asp-for="Image" />

                    <div class="mb-3">
                        <label class="form-label">Quantité actuelle</label>
                        <div class="input-group">
                            <button type="button" class="btn btn-outline-secondary" id="decrease">-</button>
                            <input asp-for="QteStock" class="form-control text-center" type="number" min="0" />
                            <button type="button" class="btn btn-outline-secondary" id="increase">+</button>
                        </div>
                        <span asp-validation-for="QteStock" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">Mettre à jour le stock</button>
             
                    </div>
                </form>

                <hr />

                <h6>Actions rapides</h6>
                <div class="d-flex gap-2 mt-2">
                    <button type="button" class="btn btn-outline-danger" id="set-zero">Mettre à 0</button>
                    <button class="btn btn-secondary" id="add-10">+10</button>
                    <button class="btn btn-secondary" id="remove-10">-10</button>
                </div>
            </div>

            <div class="mt-3">
                <small class="text-muted">Modifier le stock ici mettra à jour la fiche produit. Pour modifier d'autres informations (nom, prix, image), utilisez "Modifier le produit".</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    (function(){
        function getQtyInput(){ return $("input[name='QteStock']"); }
        $('#increase').on('click', function(){
            var $i = getQtyInput();
            var v = parseInt($i.val() || '0', 10) + 1;
            $i.val(v);
        });
        $('#decrease').on('click', function(){
            var $i = getQtyInput();
            var v = parseInt($i.val() || '0', 10);
            if (v > 0) $i.val(v - 1);
        });
        $('#add-10').on('click', function(){ var $i=getQtyInput(); $i.val((parseInt($i.val()||'0',10)||0)+10); });
        $('#remove-10').on('click', function(){ var $i=getQtyInput(); var v=(parseInt($i.val()||'0',10)||0)-10; $i.val(v<0?0:v); });
        $('#set-zero').on('click', function(){ getQtyInput().val(0); });
    })();
</script>
}
