@model IEnumerable<GestionArticles.Models.Product>
@using System.Linq
@{
    ViewData["Title"] = "Gestion du Stock";
}

<div class="container-fluid py-4">
    <div class="card mb-4">
        <div class="card-header primary-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-warehouse me-2"></i>Gestion du Stock
                </h2>
                <a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-success">
                    <i class="fas fa-plus me-1"></i>Ajouter Produit
                </a>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-inbox fs-4 mb-2 d-block"></i>
            <p>Aucun produit disponible.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover datatable" id="stockTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%"><i class="fas fa-box me-2"></i>Nom</th>
                            <th style="width: 20%"><i class="fas fa-th me-2"></i>Catégorie</th>
                            <th style="width: 15%"><i class="fas fa-cubes me-2"></i>Quantité</th>
                            <th style="width: 15%"><i class="fas fa-flag me-2"></i>Statut</th>
                            <th style="width: 25%"><i class="fas fa-cogs me-2"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            if (product == null) continue;
                            
                            var isRupture = product.QteStock == 0;
                            var isLowStock = product.QteStock > 0 && product.QteStock <= 20;
                            var statusClass = isRupture ? "table-danger" : isLowStock ? "table-warning" : "";
                            var statusBadge = isRupture ? "bg-danger" : isLowStock ? "bg-warning text-dark" : "bg-success";
                            var statusText = isRupture ? "Rupture" : isLowStock ? "Stock limité" : "En stock";

                            <tr class="@statusClass">
                                <td><strong>@product.Name</strong></td>
                                <td>@(product.Category != null ? product.Category.CategoryName : "-")</td>
                                <td>
                                    <span class="badge bg-info">@product.QteStock</span>
                                </td>
                                <td>
                                    <span class="badge @statusBadge">@statusText</span>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-info me-2" href="@Url.Action("Details", "Stock", new { id = product.ProductId })" title="Détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Stock", new { id = product.ProductId })" title="Éditer">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .primary-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem;
        border-radius: 0.5rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        cursor: pointer;
    }

    .badge {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
    }
</style>
