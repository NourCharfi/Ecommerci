@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-user-slash me-2"></i>Delete User</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Index", "UserManagement")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Users
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <strong>Confirm User Deletion</strong>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone. All user data will be permanently deleted.
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-3">Username:</dt>
                        <dd class="col-sm-9"><strong>@Model.UserName</strong></dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Phone:</dt>
                        <dd class="col-sm-9">@(Model.PhoneNumber ?? "N/A")</dd>
                    </dl>

                    <p class="text-muted">Are you sure you want to delete this user?</p>

                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete User
                            </button>
                            <a href="@Url.Action("Index", "UserManagement")" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
