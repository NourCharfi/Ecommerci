@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Gestion des Utilisateurs";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var totalUsers = (Model?.Count() ?? 0);
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-users me-2"></i>Gestion des Utilisateurs</h2>
            <p class="text-muted">Total: <strong>@totalUsers</strong> utilisateurs</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("CreateUser","Admin")" class="btn btn-primary me-2"><i class="fas fa-user-plus me-1"></i>Ajouter</a>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour Admin
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <strong><i class="fas fa-list me-2"></i>Liste des Utilisateurs</strong>
            <span class="badge bg-light text-dark">@totalUsers</span>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover datatable" id="usersTable" data-no-paging="false">
                        <thead class="table-light">
                            <tr>
                                <th style="width:30%;">Nom d'utilisateur</th>
                                <th style="width:35%;">Email</th>
                                <th style="width:15%;">Téléphone</th>
                                <th style="width:20%;" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td><strong class="text-primary">@user.UserName</strong></td>
                                    <td><i class="fas fa-envelope me-1 text-muted"></i>@user.Email</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                        { <i class="fas fa-phone me-1 text-muted"></i>@user.PhoneNumber }
                                        else { <span class="text-muted">-</span> }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Details", "UserManagement", new { id = user.Id })" class="btn btn-sm btn-info" title="Voir détails"><i class="fas fa-eye"></i></a>
                                            <a href="@Url.Action("Edit", "UserManagement", new { id = user.Id })" class="btn btn-sm btn-warning" title="Modifier"><i class="fas fa-edit"></i></a>
                                            <a href="@Url.Action("ResetPassword", "UserManagement", new { id = user.Id })" class="btn btn-sm btn-secondary" title="Réinitialiser mot de passe"><i class="fas fa-key"></i></a>
                                            <a href="@Url.Action("Delete", "UserManagement", new { id = user.Id })" class="btn btn-sm btn-danger" title="Supprimer" onclick="return confirm('Êtes-vous sûr ?');"><i class="fas fa-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-inbox fs-1 mb-3 d-block opacity-50"></i>
                    <p>Aucun utilisateur trouvé</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.85rem;
    }
</style>
