@model GestionArticles.Models.Product
@using GestionArticles.ViewModels
@inject GestionArticles.Services.IDiscountService DiscountService
@{
    ViewData["Title"] = "Détails du produit";
    var photoPath = "~/images/" + (Model.Image ?? "noimage.jpg");
    var discount = DiscountService.GetApplicableDiscount(Model);
    var vm = ProductWithDiscountViewModel.FromProduct(Model, discount);
    var hasDiscount = vm.HasDiscount && vm.DiscountedPrice < (decimal)vm.OriginalPrice;
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Accueil</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Produits</a></li>
        <li class="breadcrumb-item active">@Model.Name</li>
    </ol>
</nav>

<div class="card shadow-lg border-0">
    <div class="card-body p-4 p-md-5">
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="position-relative">
                    <img src="@photoPath" asp-append-version="true" 
                         class="img-fluid rounded-lg shadow-md" 
                         alt="@Model.Name" 
                         style="width: 100%; height: 500px; object-fit: cover;" />

                    <partial name="_ProductDiscountBadge" model="vm" />
                    
                    <partial name="_PromoInfo" model="vm" />

                    @if (Model.QteStock == 0)
                    {
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge badge-danger fs-6 px-3 py-2">
                                <i class="fas fa-exclamation-circle me-1"></i> Rupture de stock
                            </span>
                        </div>
                    }
                    else if (Model.QteStock <= 20)
                    {
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge badge-warning fs-6 px-3 py-2">
                                <i class="fas fa-exclamation-triangle me-1"></i> Stock limité
                            </span>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3">
                    <span class="badge badge-primary fs-6 px-3 py-2">
                        <i class="fas fa-tag me-1"></i> @(Model.Category?.CategoryName ?? "Non catégorisé")
                    </span>
                </div>
                <h1 class="display-5 fw-bold mb-4">@Model.Name</h1>
                <div class="mb-4">
                    @if (hasDiscount)
                    {
                        <div class="d-flex align-items-center gap-3 mb-2">
                            <span class="text-muted text-decoration-line-through fs-5">@vm.OriginalPrice.ToString("F2") DT</span>
                            <span class="text-success fw-bold fs-3">@vm.DiscountedPrice.ToString("F2") DT</span>
                        </div>
                        <div class="text-success mb-3">
                            <i class="fas fa-save me-1"></i> Vous économisez @vm.DiscountAmount.ToString("F2") DT
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <div class="product-price">@Model.Price.ToString("F2") DT</div>
                        </div>
                    }

                    <div class="d-flex align-items-center gap-2 mb-4">
                        <span class="stock-indicator @(Model.QteStock == 0 ? "out" : (Model.QteStock <= 20 ? "low" : "ok"))"></span>
                        @if (Model.QteStock == 0)
                        {
                            <span class="text-danger fw-semibold fs-5">Rupture de stock</span>
                        }
                        else if (Model.QteStock <= 20)
                        {
                            <span class="text-warning fw-semibold fs-5">Plus que @Model.QteStock @(Model.QteStock == 1 ? "unité" : "unités") en stock</span>
                        }
                        else
                        {
                            <span class="text-success fw-semibold fs-5">En stock (@Model.QteStock @(Model.QteStock == 1 ? "unité" : "unités") disponibles)</span>
                        }
                    </div>
                </div>
                <hr class="my-4" />
                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Informations produit</h5>
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td class="text-muted fw-semibold" style="width: 150px;"><i class="fas fa-barcode me-2"></i> Référence</td>
                                <td class="fw-semibold">#@Model.ProductId</td>
                            </tr>
                            <tr>
                                <td class="text-muted fw-semibold"><i class="fas fa-th-large me-2"></i> Catégorie</td>
                                <td>
                                    <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@Model.CategoryId" class="text-decoration-none fw-semibold">@(Model.Category?.CategoryName ?? "Non catégorisé")</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-muted fw-semibold"><i class="fas fa-boxes me-2"></i> Stock disponible</td>
                                <td class="fw-semibold">@Model.QteStock @(Model.QteStock == 1 ? "unité" : "unités")</td>
                            </tr>
                            <tr>
                                <td class="text-muted fw-semibold"><i class="fas fa-tag me-2"></i> Prix unitaire</td>
                                <td class="fw-semibold text-primary fs-5">@Model.Price.ToString("F2") DT</td>
                            </tr>
                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                <tr class="table-info">
                                    <td class="text-muted fw-semibold"><i class="fas fa-user-plus me-2"></i> Créé par</td>
                                    <td><span class="badge bg-success">@(Model.CreatedBy ?? "Admin")</span> <small class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small></td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.ModifiedBy))
                                {
                                    <tr class="table-warning">
                                        <td class="text-muted fw-semibold"><i class="fas fa-user-edit me-2"></i> Modifié par</td>
                                        <td><span class="badge bg-warning">@Model.ModifiedBy</span> <small class="text-muted">@Model.ModifiedAt?.ToString("dd/MM/yyyy HH:mm")</small></td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.DeletedBy))
                                {
                                    <tr class="table-danger">
                                        <td class="text-muted fw-semibold"><i class="fas fa-trash me-2"></i> Supprimé par</td>
                                        <td><span class="badge bg-danger">@Model.DeletedBy</span> <small class="text-muted">@Model.DeletedAt?.ToString("dd/MM/yyyy HH:mm")</small></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <hr class="my-4" />
                <div class="d-grid gap-3">
                    @if (Model.QteStock > 0)
                    {
                        <a asp-controller="Panier" asp-action="AddProduct" asp-route-id="@Model.ProductId" class="btn btn-primary btn-lg"><i class="fas fa-cart-plus me-2"></i> Ajouter au panier</a>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg" disabled><i class="fas fa-ban me-2"></i> Produit indisponible</button>
                    }
                    <div class="row g-2">
                        <div class="col-6"><a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100"><i class="fas fa-arrow-left me-2"></i> Retour</a></div>
                        <div class="col-6"><button class="btn btn-outline-danger btn-lg w-100 FavoriteToggle" data-id="@Model.ProductId"><i class="far fa-heart me-2"></i> Favoris</button></div>
                    </div>
                </div>
                <div class="mt-5">
                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <h6 class="fw-bold mb-3"><i class="fas fa-info-circle me-2"></i> Informations complémentaires</h6>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Garantie qualité</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Livraison rapide disponible</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Service client 24/7</li>
                                <li><i class="fas fa-check text-success me-2"></i> Paiement sécurisé</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <h3 class="mb-4"><i class="fas fa-th me-2"></i> Produits similaires</h3>
    <div class="text-center text-muted py-5">
        <i class="fas fa-box-open fa-3x mb-3 opacity-50"></i>
        <p>Aucun produit similaire pour le moment</p>
        <a asp-action="Index" class="btn btn-outline-primary"><i class="fas fa-arrow-left me-2"></i> Voir tous les produits</a>
    </div>
</div>

<style>
    .breadcrumb-item + .breadcrumb-item::before {
        content: "›";
        color: var(--light-text);
    }
    
    .breadcrumb-item a {
        color: var(--primary-color);
        text-decoration: none;
    }
    
    .breadcrumb-item a:hover {
        color: var(--primary-light);
        text-decoration: underline;
    }
</style>