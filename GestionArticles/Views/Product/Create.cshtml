@using GestionArticles.ViewModels.Products
@model CreateViewModel


@{
    ViewData["Title"] = "Créer un produit";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-plus me-2"></i>Créer un produit
    </h1>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-box me-2"></i>Informations du produit
        </h6>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-tag me-1"></i>Nom du produit
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Entrez le nom du produit" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="form-label">
                            <i class="fas fa-dollar-sign me-1"></i>Prix
                        </label>
                        <input asp-for="Price" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="QteStock" class="form-label">
                            <i class="fas fa-warehouse me-1"></i>Quantité en stock
                        </label>
                        <input asp-for="QteStock" class="form-control" placeholder="0" />
                        <span asp-validation-for="QteStock" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="form-label">
                            <i class="fas fa-folder me-1"></i>Catégorie
                        </label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                            <option value="">-- Sélectionner une catégorie --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group mb-4">
                <label asp-for="ImagePath" class="form-label">
                    <i class="fas fa-image me-1"></i>Image du produit
                </label>
                <div class="custom-file">
                    <input asp-for="ImagePath" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choisir un fichier...</label>
                </div>
                <small class="form-text text-muted">Formats acceptés : JPG, PNG, GIF (Max 5MB)</small>
            </div>
            
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Créer le produit
                </button>
            </div>
        </form>
    </div>
</div>
