@using GestionArticles.ViewModels.Products
@model EditViewModel
@{
    ViewData["Title"] = "Modifier le produit";
    // Get the full path of the existing product photo for display
    var photoPath = "~/images/" + (Model.ExistingImagePath ?? "noimage.jpg");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-edit me-2"></i>Modifier le produit
    </h1>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-box me-2"></i>Modification du produit
        </h6>
    </div>
    <div class="card-body">
        <form asp-controller="Product" asp-action="edit" enctype="multipart/form-data" method="post" class="mt-3">
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
            
            @*Use hidden input elements to store productid and ExistingImagePath which we need when we submit the form and update data in the DB*@
            <input hidden asp-for="ProductId" />
            <input hidden asp-for="ExistingImagePath" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-tag me-1"></i>Nom du produit
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Entrez le nom du produit" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="form-label">
                            <i class="fas fa-dollar-sign me-1"></i>Prix
                        </label>
                        <input asp-for="Price" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="QteStock" class="form-label">
                            <i class="fas fa-warehouse me-1"></i>Quantité en stock
                        </label>
                        <input asp-for="QteStock" class="form-control" placeholder="0" />
                        <span asp-validation-for="QteStock" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="form-label">
                            <i class="fas fa-folder me-1"></i>Catégorie
                        </label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                            <option value="">-- Sélectionner une catégorie --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ImagePath" class="form-label">
                    <i class="fas fa-image me-1"></i>Image du produit (laisser vide pour conserver l'image actuelle)
                </label>
                <div class="custom-file">
                    <input asp-for="ImagePath" class="custom-file-input form-control" id="imageInput" />
                    <label class="custom-file-label" for="imageInput">Cliquer ici pour changer la photo</label>
                </div>
                <small class="form-text text-muted">Formats acceptés : JPG, PNG, GIF (Max 5MB)</small>
            </div>
            
            @* Display the existing Product photo *@
            <div class="text-center mb-4">
                <img id="imageEmp" src="@photoPath" asp-append-version="true" class="img-thumbnail" style="max-height: 200px; max-width: 200px;" />
                <p class="text-muted mt-2">Image actuelle</p>
            </div>
            
            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Mettre à jour
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
<script>
$(document).ready(function () {
$('.custom-file-input').on("change", function () {
var fileName = $(this).val().split("\\").pop();
$(this).next('.custom-file-label').html(fileName);
// Mise à jour de l'image de prévisualisation
var reader = new FileReader();
reader.onload = function (e) {
$('#imageEmp').attr('src', e.target.result); // Utilisation de la nouvelle image sélectionnée
};
if (this.files && this.files[0]) reader.readAsDataURL(this.files[0]); // Lecture du fichier sélectionné
});
});
</script>
}