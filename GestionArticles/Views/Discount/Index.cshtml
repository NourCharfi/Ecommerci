@model IEnumerable<GestionArticles.Models.Promotions.Discount>

@{
    ViewData["Title"] = "Gestion des Soldes et Promotions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>?? Soldes et Promotions</h1>
        <a href="@Url.Action("Create", "Discount")" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Créer une promo
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover datatable" id="discountsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Nom</th>
                                <th>Type</th>
                                <th>Valeur</th>
                                <th>Période</th>
                                <th>Statut</th>
                                <th>Utilisations</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var discount in Model)
                            {
                                var typeBadgeClass = discount.Type switch
                                {
                                    GestionArticles.Models.Promotions.DiscountType.Percentage => "bg-info",
                                    GestionArticles.Models.Promotions.DiscountType.FreeShipping => "bg-warning",
                                    _ => "bg-secondary"
                                };

                                var statusClass = discount.IsActive ? "badge bg-success" : "badge bg-danger";
                                var statusText = discount.IsActive ? "Actif" : "Inactif";

                                <tr>
                                    <td>
                                        <strong>@discount.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge @typeBadgeClass">@discount.Type</span>
                                    </td>
                                    <td>
                                        @if (discount.Type == GestionArticles.Models.Promotions.DiscountType.Percentage)
                                        {
                                            <span>-@discount.Value%</span>
                                        }
                                        else if (discount.Type == GestionArticles.Models.Promotions.DiscountType.FreeShipping)
                                        {
                                            <span>? Gratuite</span>
                                        }
                                        else
                                        {
                                            <span>@discount.Value</span>
                                        }
                                    </td>
                                    <td>
                                        <small>
                                            @discount.StartDate.ToString("dd/MM/yyyy") - @discount.EndDate.ToString("dd/MM/yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        <span class="@statusClass">@statusText</span>
                                    </td>
                                    <td>
                                        @if (discount.MaxUsageCount.HasValue)
                                        {
                                            <span>@discount.CurrentUsageCount / @discount.MaxUsageCount</span>
                                        }
                                        else
                                        {
                                            <span>@discount.CurrentUsageCount / ?</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Discount", new { id = discount.Id })" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" style="display: inline;">
                                            <button type="submit" formaction="@Url.Action("Toggle", "Discount", new { id = discount.Id })" class="btn btn-sm btn-warning">
                                                <i class="fas fa-toggle-@(discount.IsActive ? "on" : "off")"></i>
                                            </button>
                                        </form>
                                        <form method="post" style="display: inline;">
                                            <button type="submit" formaction="@Url.Action("Delete", "Discount", new { id = discount.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Confirmer la suppression?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-inbox fs-1 mb-3 d-block"></i>
            <p>Aucune promotion créée</p>
            <a href="@Url.Action("Create", "Discount")" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Créer la première promo
            </a>
        </div>
    }
</div>
