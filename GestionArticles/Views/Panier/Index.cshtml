@{
    ViewBag.Title = "Mon panier";
}

@inject GestionArticles.Services.IDiscountService DiscountService

<div class="container mt-4">
    <div class="card mb-4">
        <div class="card-header primary-header">
            <h2 class="mb-0">
                <i class="fas fa-shopping-cart me-2"></i>Mon Panier
            </h2>
        </div>
    </div>

    @* Messages *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.Liste != null && ViewBag.Liste.Count > 0)
    {
        var items = (IEnumerable<GestionArticles.Models.Help.Item>)ViewBag.Liste;
        
        <div class="row">
            <div class="col-md-8">
                <!-- Promotions Section -->
                @{
                    var itemsWithPromo = items.Where(i => DiscountService.GetApplicableDiscount(i.Prod) != null).ToList();
                }
                @if (itemsWithPromo.Count > 0)
                {
                    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-star text-warning me-2" style="font-size: 1.5rem;"></i>
                            <strong>Promotions actives dans votre panier !</strong>
                        </div>
                        <div class="row mt-3">
                            @foreach (var item in itemsWithPromo)
                            {
                                var discount = DiscountService.GetApplicableDiscount(item.Prod);
                                <div class="col-md-6 mb-2">
                                    <div class="badge bg-success" style="font-size: 0.9rem; padding: 0.5rem;">
                                        @if (discount.Type == GestionArticles.Models.Promotions.DiscountType.Percentage)
                                        {
                                            <span>@item.Prod.Name : -@discount.Value% de réduction</span>
                                        }
                                        else if (discount.Type == GestionArticles.Models.Promotions.DiscountType.FreeShipping)
                                        {
                                            <span>@item.Prod.Name : Livraison gratuite</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Cart Items -->
                @foreach (var item in items)
                {
                    var discount = DiscountService.GetApplicableDiscount(item.Prod);
                    var discountedUnit = DiscountService.CalculateDiscountedPrice(item.Prod, (decimal)item.Prod.Price);
                    var hasDiscount = (float)discountedUnit < item.Prod.Price;
                    var rowTotal = DiscountService.CalculateRowTotal(item.Prod, item.quantite, (decimal)item.Prod.Price);
                    var savings = ((decimal)item.Prod.Price * item.quantite) - rowTotal;
                    
                    string promoDetails = "";
                    if (discount?.Type == GestionArticles.Models.Promotions.DiscountType.Percentage)
                    {
                        promoDetails = $"Réduction: {discount.Value}%";
                    }
                    else if (discount?.Type == GestionArticles.Models.Promotions.DiscountType.FreeShipping)
                    {
                        promoDetails = "Livraison gratuite";
                    }

                    <div class="card mb-3 cart-item" id="row-@item.Prod.ProductId">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <img src="~/images/@item.Prod.Image" 
                                         class="img-fluid rounded shadow-sm" 
                                         style="width: 120px; height: 120px; object-fit: cover;"
                                         alt="@item.Prod.Name">
                                </div>
                                <div class="col-md-6">
                                    <h5 class="card-title">@item.Prod.Name</h5>
                                    <p class="text-muted">Catégorie: @item.Prod.Category.CategoryName</p>

                                    @if (hasDiscount)
                                    {
                                        <div>
                                            <span class="text-muted text-decoration-line-through">@item.Prod.Price.ToString("N0") DT</span>
                                            <span class="ms-2 fw-bold text-success">@(((decimal)discountedUnit).ToString("N0")) DT</span>
                                        </div>
                                        <small class="text-success"><i class="fas fa-check-circle me-1"></i>Vous économisez @savings.ToString("N0") DT</small>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Prix unitaire: @item.Prod.Price.ToString("N0") DT</p>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(promoDetails))
                                    {
                                        <div class="alert alert-info py-2 px-3 mt-2 mb-1">
                                            <small>
                                                <i class="fas fa-tag me-2"></i>
                                                <strong>Promo appliquée:</strong> @promoDetails
                                            </small>
                                        </div>
                                    }
                                    
                                    <div class="d-flex align-items-center mt-3">
                                        <span class="me-3">Quantité:</span>
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-outline-secondary btn-sm MinProducts" 
                                                    data-id="@item.Prod.ProductId">
                                                -
                                            </button>
                                            <span class="btn btn-light" id="quantite_@item.Prod.ProductId">@item.quantite</span>
                                            <button class="btn btn-outline-primary btn-sm PlusProducts" 
                                                    data-id="@item.Prod.ProductId">
                                                +
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 text-end">
                                    <h5 class="text-success" id="total_@item.Prod.ProductId">@rowTotal.ToString("N0") DT</h5>
                                    <small class="text-muted d-block mb-2">
                                        @if (savings > 0)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                Économie: @savings.ToString("N0") DT
                                            </span>
                                        }
                                    </small>
                                    <button class="btn btn-outline-danger btn-sm RemoveLink" 
                                            data-id="@item.Prod.ProductId">
                                        <i class="fas fa-trash me-1"></i>Supprimer
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="col-md-4">
                <div class="card sticky-top" style="top: 20px;">
                    <div class="card-header secondary-header">
                        <h5 class="mb-0">
                            <i class="fas fa-receipt me-2"></i>Résumé de votre Panier
                        </h5>
                    </div>
                    <div class="card-body">
                        @{
                            decimal totalEconomies = 0;
                            foreach (var item in items)
                            {
                                var rowTotal = DiscountService.CalculateRowTotal(item.Prod, item.quantite, (decimal)item.Prod.Price);
                                var savings = ((decimal)item.Prod.Price * item.quantite) - rowTotal;
                                totalEconomies += savings;
                            }
                        }

                        <div class="d-flex justify-content-between mb-2">
                            <span>Nombre d'articles:</span>
                            <strong class="text-primary">@items.Count()</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Sous-total:</span>
                            <strong class="text-primary" id="cart-total">@(((float)ViewBag.total).ToString("N0")) DT</strong>
                        </div>
                        @if (totalEconomies > 0)
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span><i class="fas fa-star text-warning me-1"></i>Économies:</span>
                                <strong class="text-success">-@totalEconomies.ToString("N0") DT</strong>
                            </div>
                        }
                        <div class="d-flex justify-content-between mt-3">
                            <span>Frais de livraison:</span>
                            <strong class="text-primary">10 DT</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h6 class="mb-0">TOTAL:</h6>
                            <h6 class="mb-0 text-success">@((((float)ViewBag.total) + 10).ToString("N0")) DT</h6>
                        </div>

                        <div class="alert alert-info mb-3" role="alert">
                            <small>
                                <i class="fas fa-info-circle me-2"></i>
                                Découvrez toutes les promotions disponibles
                            </small>
                        </div>

                        <div class="d-grid gap-2">
                            <a href="~/Panier/Checkout" class="btn btn-success btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Commander
                            </a>
                            <a href="~/Panier/Promotions" class="btn btn-info">
                                <i class="fas fa-star me-2"></i>Voir les Promotions
                            </a>
                            <a href="~/Product/Index" class="btn btn-outline-secondary">
                                <i class="fas fa-shopping-bag me-2"></i>Continuer mes achats
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <img src="~/images/panier_vide.png" alt="Panier vide" style="width:200px;height:auto;" />
            <h3 class="mt-3 text-muted">Votre panier est vide !</h3>
            <p class="text-muted">Partez à la découverte de nos produits et faites-vous plaisir</p>
            <a href="~/Product/Index" class="btn btn-primary btn-lg">
                <i class="fas fa-search me-2"></i>Voir les produits
            </a>
        </div>
    }
</div>

<style>
    .primary-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem;
    }

    .secondary-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .card {
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 1.5rem;
    }

    .alert {
        border-radius: 0.5rem;
    }

    .sticky-top {
        z-index: 10;
    }

    .btn {
        border-radius: 0.25rem;
        font-weight: 500;
    }
</style>
