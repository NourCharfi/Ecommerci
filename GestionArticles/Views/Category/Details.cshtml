@model GestionArticles.Models.Category

@{
    ViewData["Title"] = "Détails catégorie";
}

<h1>Détails catégorie</h1>

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="~/images/categories/@Model.Image" class="img-fluid rounded mb-3" alt="Image catégorie" />
        }
        else
        {
            <img src="~/images/noimage.jpg" class="img-fluid rounded mb-3" alt="Pas d'image" />
        }
    </div>
    <div class="col-md-8">
        <h4>@Model.CategoryName</h4>
        <p class="text-muted">Nombre de produits: @Model.Products?.Count()</p>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-primary me-2">Modifier</a>
            <a asp-action="Delete" asp-route-id="@Model?.CategoryId" class="btn btn-danger">Supprimer</a>
            <a asp-action="Index" class="btn btn-link ms-3">Retour à la liste</a>
        </div>
    </div>
</div>
