@model GestionArticles.ViewModels.Admin.CreateUserViewModel

@{
    ViewData["Title"] = "Ajouter un Utilisateur";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header primary-header">
                    <h3 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Ajouter un Nouvel Utilisateur
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateUser" method="post" novalidate>
                        <!-- Email -->
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-600">
                                <i class="fas fa-envelope me-2"></i>Email *
                            </label>
                            <input asp-for="Email" 
                                   type="email"
                                   class="form-control form-control-lg" 
                                   placeholder="exemple@domaine.com"
                                   required />
                            <span asp-validation-for="Email" class="d-block text-danger small mt-2"></span>
                            <small class="text-muted d-block mt-1">
                                <i class="fas fa-info-circle me-1"></i>
                                L'email sera utilisé comme identifiant de connexion
                            </small>
                        </div>

                        <!-- Password -->
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-600">
                                <i class="fas fa-lock me-2"></i>Mot de Passe *
                            </label>
                            <input asp-for="Password" 
                                   type="password" 
                                   class="form-control form-control-lg" 
                                   placeholder="••••••••"
                                   required />
                            <span asp-validation-for="Password" class="d-block text-danger small mt-2"></span>
                            <small class="text-muted d-block mt-1">
                                <i class="fas fa-info-circle me-1"></i>
                                Minimum 6 caractères (majuscules, minuscules, chiffres recommandés)
                            </small>
                        </div>

                        <!-- Role Selection -->
                        <div class="mb-4">
                            <label class="form-label fw-600">
                                <i class="fas fa-user-tag me-2"></i>Rôle (optionnel)
                            </label>
                            <select asp-for="Role" class="form-select form-select-lg">
                                <option value="">-- Aucun Rôle --</option>
                                @{
                                    var roles = ViewBag.Roles as List<string> ?? new List<string>();
                                    var roleDescriptions = new Dictionary<string, string>
                                    {
                                        { "Admin", "Accès complet au système" },
                                        { "Manager", "Gestion des produits et commandes" },
                                        { "User", "Accès client standard" }
                                    };
                                }
                                @foreach(var r in roles)
                                {
                                    var desc = roleDescriptions.ContainsKey(r) ? roleDescriptions[r] : "";
                                    <option value="@r">@r @(string.IsNullOrEmpty(desc) ? "" : " - " + desc)</option>
                                }
                            </select>
                            <small class="text-muted d-block mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                Le rôle définit les permissions de l'utilisateur
                            </small>
                        </div>

                        <!-- Alert if validation errors -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <h6 class="alert-heading">
                                    <i class="fas fa-exclamation-triangle me-2"></i>Erreur de Validation
                                </h6>
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    @foreach (var error in modelState.Errors)
                                    {
                                        <div>• @error.ErrorMessage</div>
                                    }
                                }
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Buttons -->
                        <div class="d-grid gap-2 pt-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check me-2"></i>Ajouter l'Utilisateur
                            </button>
                            <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Retour au Tableau de Bord
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Info Box -->
                <div class="card-footer bg-light">
                    <div class="text-muted small">
                        <p class="mb-2">
                            <i class="fas fa-shield-alt text-success me-2"></i>
                            <strong>Sécurité:</strong> Le mot de passe sera chiffré et stocké de manière sécurisée
                        </p>
                        <p class="mb-0">
                            <i class="fas fa-info-circle text-info me-2"></i>
                            <strong>Note:</strong> L'utilisateur pourra se connecter immédiatement après ajout
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .primary-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem;
    }

    .fw-600 {
        font-weight: 600;
    }

    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
    }

    .form-control-lg, .form-select-lg {
        font-size: 1rem;
        padding: 0.75rem 1rem;
    }
</style>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}