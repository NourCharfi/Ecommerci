@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Tous les rôles";
}

<h1>Tous les rôles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto"
       asp-action="CreateRole" asp-controller="Admin">Ajouter un rôle</a>
    <a class="btn btn-secondary mb-3" style="width:auto"
       asp-action="CreateUser" asp-controller="Admin">Ajouter un utilisateur</a>
    @foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Id du rôle: @role.Id
            </div>

            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>

            <div class="card-footer">
                <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                    <a asp-controller="Admin" asp-action="EditRole"
                       asp-route-id="@role.Id" class="btn btn-primary">Modifier</a>

                    <span id="confirmDeleteSpan_@role.Id" style="display:none">
                        <span>Êtes-vous sûr de vouloir supprimer ?</span>
                        <button type="submit" class="btn btn-danger">Oui</button>
                        <a href="#" class="btn btn-secondary"
                           onclick="confirmDelete('@role.Id', false)">Non</a>
                    </span>

                    <span id="deleteSpan_@role.Id">
                        <a href="#" class="btn btn-danger"
                           onclick="confirmDelete('@role.Id', true)">Supprimer</a>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Aucun rôle créé
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Utilisez le bouton ci-dessous pour créer un rôle
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Admin" asp-action="CreateRole">
                Créer un rôle
            </a>
        </div>
    </div>
}

@section Scripts {
    <script>
        function confirmDelete(roleId, showConfirm) {
            const confirmSpan = document.getElementById(`confirmDeleteSpan_${roleId}`);
            const deleteSpan = document.getElementById(`deleteSpan_${roleId}`);
            if (showConfirm) {
                confirmSpan.style.display = 'inline';
                deleteSpan.style.display = 'none';
            } else {
                confirmSpan.style.display = 'none';
                deleteSpan.style.display = 'inline';
            }
        }
    </script>
}
